<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookstore</title>
    <style>
        /* General Styles */
body {
    font-family: 'Arial', sans-serif;
    background-color: #f8f9fa;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

/* Bookstore Heading */
.insert h1 {
    font-size: 2.5rem;
    color: #333;
    text-align: center;
}

.insert h1 span {
    color: red;
}

/* Form Styling */
.insert {
    background: #ffffff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    width: 40%;
    text-align: center;
    margin-bottom: 20px;
}

form input[type="text"],
form input[type="email"],
form input[type="file"] {
    width: 90%;
    padding: 10px;
    margin: 5px 0;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 1rem;
}

form input[type="submit"] {
    background-color: #dc3545;
    color: white;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    font-size: 1rem;
    border-radius: 5px;
}

form input[type="submit"]:hover {
    background-color: #c82333;
}

/* Table Styling */
.one {
    width: 80%;
    text-align: center;
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.one h2 {
    color: #333;
}

.one table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 10px;
}

.one th, .one td {
    padding: 10px;
    border: 1px solid #ddd;
}

.one th {
    background-color: #007bff;
    color: white;
}

.one img {
    border-radius: 5px;
    height: 100px;
    width: auto;
}

.one .action-buttons {
    display: flex;
    justify-content: space-evenly;
}

/* Button Styling */
.one button {
    padding: 8px 12px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 0.9rem;
    color: white;
}

.one .delete-button {
    background-color: red;
}

.one .edit-button {
    background-color: blue;
}

.one button:hover {
    opacity: 0.8;
}

/* Responsive Design */
@media (max-width: 768px) {
    .insert, .one {
        width: 90%;
    }
}

    </style>
</head>
<body>
    <div class="insert">
        <h1><span>The</span> Book Store</h1>
        <form action="/addData" method="post" enctype="multipart/form-data">
            <label for="userName">Book Name: </label>
            <input type="text" placeholder="Enter Book Name" name="userName" id="userName"><br><br>
            <label for="email">Email: </label>
            <input type="email" placeholder="Enter Email" name="email" id="email"><br><br>
            <label for="author">Writer-Name:</label>
            <input type="text" placeholder="Enter Author name" name="author" id="author"><br><br>
            <label for="price">Cost:</label>
            <input type="number" name="price" placeholder="Enter Price" id="price"><br><br>
            <label for="image">Upload an Image</label>
            <input type="file" name="image" id="image" /><br><br>
            <input type="submit" value="Submit">
        </form>
    </div>

    <div class="one">
        <h2>List of Books</h2>
        <table>
            <tr>
                <th>Book-Name</th>
                <th>Email</th>
                <th>Author</th>
                <th>Price</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
            <% userdata.map((data, i) => { %>
                <tr>
                    <td><%= data.userName %></td>
                    <td><%= data.email %></td>
                    <td><%= data.author %></td>
                    <td><%= data.price %></td>
                    <td><img src="<%= data.image %>" alt="Book Image"></td>
                    <td class="action-buttons">
                        <a href="/delete/<%= data.id %>"><button class="delete-button">Delete</button></a>
                        <a href="/edit/<%= data.id %>"><button class="edit-button">Edit</button></a>
                    </td>
                </tr>
            <% }); %>
        </table>
    </div>
</body>
</html>
